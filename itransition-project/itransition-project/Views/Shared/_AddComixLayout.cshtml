@using itransition_project.Models
@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.Owin
@using Resources
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ComixCreator</title>
    @Scripts.Render("~/bundles/modernizr")
    @if (Request.IsAuthenticated)
    {
        ApplicationUser user = HttpContext.Current.GetOwinContext().GetUserManager<ApplicationUserManager>().FindById(HttpContext.Current.User.Identity.GetUserId());
        if (user.Theme == "Light")
        {
            @Styles.Render("~/Content/css_light")
        }
        else
        {
            @Styles.Render("~/Content/css_dark")
        }
    }
    else
    {
        @Styles.Render("~/Content/css_dark")
    }
    @Styles.Render("~/Content/balloons")
    @Styles.Render("~/Content/ng-tags-input")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ComixMaker", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/UserInfo")
    @RenderSection("scripts", required: false)
    <!-- Styles -->
    <link href="~/Content/Comix/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Comix/jquery-ui-1.8.17.custom.css" rel="stylesheet" />
    <link href="~/Content/Comix/ragemaker.css" rel="stylesheet" />
    <!-- Javascript -->
    <script src="~/Scripts/Comix/analytics.js"></script>
    <script src="~/Scripts/Comix/jquery.js"></script>
    <script src="~/Scripts/Comix/funposts.js"></script>
    <script src="~/Scripts/Comix/mem.js"></script>
    <script src="~/Scripts/Comix/jquery.ui-1.8.17.js"></script>
    <script src="~/Scripts/Comix/rotate.js"></script>
    <script src="~/Scripts/Comix/ajaxfileupload.js"></script>
    <script src="~/Scripts/Comix/shortcut.js"></script>
    <script src="~/Scripts/Comix/taexpander.js"></script>
    <script src="~/Scripts/Comix/farbtastic.js"></script>
    <script src="~/Scripts/Comix/ragemaker.js"></script>
    <script src="~/Scripts/Comix/html2canvas.js"></script>
</body>
</html>